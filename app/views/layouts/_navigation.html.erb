<div class="ui inverted small menu">
  <div class="ui container">
    <a class="item" href="<%= root_path %>">
      Chatroom
    </a>
    <a class="item">
      Messages
    </a>
    <div class="right menu">
      <div class="ui dropdown item">
        Account <i class="dropdown icon"></i>
        <div class="menu">
          <% if logged_in? %>
            <%= link_to "Logout", logout_path, method: :delete, class: "item" %>
          <% else %>
            <a class="item" href="<%= login_path %>">Login</a>
            <a class="item">Sign Up</a>
          <% end %>
        </div>
      </div>
      <% if !logged_in? %>
        <div class="item">
          <a class="ui primary button" href="<%= login_path %>">Login</a>
        </div>
      <% end %>
    </div>
  </div>
</div>